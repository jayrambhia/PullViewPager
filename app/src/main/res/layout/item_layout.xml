<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="4dp"
    android:layout_height="match_parent">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_bike"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_directions_bike_black_48dp"
        android:drawablePadding="18dp"
        android:layout_marginBottom="12dp"
        android:text="21 Mins"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textview_walk"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:drawableLeft="@drawable/ic_directions_walk_black_48dp"
        android:drawablePadding="18dp"
        android:text="42 Mins"/>

</LinearLayout>